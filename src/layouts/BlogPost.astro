---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import DefaultImage from '../assets/blog-placeholder-1.jpg';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				max-width: 440px;
				margin: 0.5rem auto 0;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				height: auto;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1.5em;
				border-radius: 12px;
				line-height: 1.6;
				/* Light theme colors */
				background-color: #F4ECD8;
				color: #333333;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1.2;
				border-bottom: 2px solid rgba(51, 51, 51, 0.1);
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				font-size: 1.8rem;
				line-height: 1.3;
				color: #2c5530;
			}
			.date {
				margin-bottom: 0.5em;
				color: #666666;
				font-size: 0.9rem;
			}
			.last-updated-on {
				font-style: italic;
			}
			
			/* Contenido markdown */
			.prose h1 {
				font-size: 1.6rem;
				margin: 1.5em 0 1em 0;
				color: #1a472a;
				border-bottom: 2px solid #2c5530;
				padding-bottom: 0.5em;
			}
			.prose h2 {
				font-size: 1.4rem;
				margin: 1.2em 0 0.8em 0;
				color: #2c5530;
			}
			.prose h3 {
				font-size: 1.2rem;
				margin: 1em 0 0.6em 0;
				color: #333333;
			}
			.prose p {
				margin: 0.8em 0;
				color: #444444;
			}
			.prose strong {
				color: #1a472a;
				font-weight: bold;
			}
			.prose em {
				color: #2c5530;
				font-style: italic;
			}
			.prose code {
				background: rgba(0,0,0,0.1);
				padding: 0.2em 0.4em;
				border-radius: 4px;
				font-family: monospace;
				color: #333333;
			}
			.prose pre {
				background: rgba(0,0,0,0.05);
				padding: 1em;
				border-radius: 8px;
				overflow-x: auto;
				margin: 1em 0;
				color: #333333;
			}
			.prose blockquote {
				border-left: 4px solid #2c5530;
				margin: 1em 0;
				padding: 0.5em 0 0.5em 1em;
				background: rgba(255,255,255,0.3);
				border-radius: 0 8px 8px 0;
				color: #444444;
			}
			.prose ul, .prose ol {
				margin: 0.8em 0;
				padding-left: 1.5em;
				color: #444444;
			}
			.prose li {
				margin: 0.4em 0;
			}
			
			/* Dark mode */
			@media (prefers-color-scheme: dark) {
				.prose {
					background-color: rgb(var(--gray-light));
					color: rgb(var(--gray-dark));
				}
				.title {
					border-bottom-color: rgba(255, 255, 255, 0.1);
				}
				.title h1 {
					color: rgb(var(--accent));
				}
				.date {
					color: rgb(var(--gray));
				}
				.prose h1 {
					color: rgb(var(--accent)) !important;
					border-bottom-color: rgb(var(--accent)) !important;
				}
				.prose h2 {
					color: rgb(var(--accent)) !important;
				}
				.prose h3 {
					color: rgb(var(--gray-dark)) !important;
				}
				.prose p {
					color: rgb(var(--gray-dark)) !important;
				}
				.prose strong {
					color: rgb(var(--accent)) !important;
				}
				.prose em {
					color: rgb(var(--accent)) !important;
				}
				.prose code {
					background: rgba(255,255,255,0.1) !important;
					color: rgb(var(--gray-dark)) !important;
				}
				.prose pre {
					background: rgba(255,255,255,0.05) !important;
					color: rgb(var(--gray-dark)) !important;
				}
				.prose blockquote {
					border-left-color: rgb(var(--accent)) !important;
					background: rgba(255,255,255,0.05) !important;
					color: rgb(var(--gray-dark)) !important;
				}
				.prose ul, .prose ol {
					color: rgb(var(--gray-dark)) !important;
				}
			}
			
			@media (max-width: 720px) {
				.title h1 {
					font-size: 1.5rem;
				}
				.prose {
					padding: 1em;
				}
				.prose h1 {
					font-size: 1.4rem;
				}
				.prose h2 {
					font-size: 1.2rem;
				}
			}
			
			/* Botón scroll to top */
			.scroll-to-top {
				position: fixed;
				bottom: 2rem;
				right: 2rem;
				width: 50px;
				height: 50px;
				background: #2C5282;
				color: white;
				border: none;
				border-radius: 50%;
				cursor: pointer;
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: 1.2rem;
				box-shadow: 0 4px 12px rgba(44, 82, 130, 0.3);
				transition: all 0.3s ease;
				opacity: 0;
				visibility: hidden;
				transform: translateY(20px);
				z-index: 1000;
			}
			
			.scroll-to-top.visible {
				opacity: 1;
				visibility: visible;
				transform: translateY(0);
			}
			
			.scroll-to-top:hover {
				background: #1A365D;
				transform: translateY(-2px);
				box-shadow: 0 6px 16px rgba(44, 82, 130, 0.4);
			}
			
			.scroll-to-top:active {
				transform: translateY(0);
			}
			
			/* Dark mode para el botón */
			@media (prefers-color-scheme: dark) {
				.scroll-to-top {
					background: #68D391;
					color: #1A202C;
					box-shadow: 0 4px 12px rgba(104, 211, 145, 0.3);
				}
				
				.scroll-to-top:hover {
					background: #48BB78;
					box-shadow: 0 6px 16px rgba(104, 211, 145, 0.4);
				}
			}
			
			/* Responsive */
			@media (max-width: 768px) {
				.scroll-to-top {
					bottom: 1.5rem;
					right: 1.5rem;
					width: 45px;
					height: 45px;
					font-size: 1.1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					<Image 
						width={640} 
						height={320} 
						src={heroImage && typeof heroImage === 'object' ? heroImage : DefaultImage} 
						alt={title} 
					/>
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		
		<!-- Botón scroll to top -->
		<button id="scrollToTop" class="scroll-to-top" aria-label="Volver al inicio">
			↑
		</button>
		
		<Footer />
		
		<script>
			// Funcionalidad del botón scroll to top
			document.addEventListener('DOMContentLoaded', function() {
				const scrollToTopButton = document.getElementById('scrollToTop');
				
				// Mostrar/ocultar botón basado en scroll
				window.addEventListener('scroll', function() {
					if (window.pageYOffset > 300) {
						scrollToTopButton?.classList.add('visible');
					} else {
						scrollToTopButton?.classList.remove('visible');
					}
				});
				
				// Funcionalidad de scroll suave al inicio
				scrollToTopButton?.addEventListener('click', function() {
					window.scrollTo({
						top: 0,
						behavior: 'smooth'
					});
				});
			});
		</script>
	</body>
</html>
